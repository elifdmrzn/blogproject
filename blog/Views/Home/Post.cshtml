
@model blog.Models.Blog

<header class="masthead" style="background-image: url('@Model.Resim')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1>@Model.BlogAdi</h1>
                    <h2 class="subheading">@Model.KisaAciklama</h2>
                    <span class="meta">
                        Posted by
                        @Model.Yazar.Ad
                        on @Model.Tarih
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<div class="container">
  <article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">

                @Html.Raw(Model.Aciklama)
               
            </div>
        </div>
    </div>
  </article>
</div>

